<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.ConvertorsSNPage">

	<ScrollView>
		<StackLayout>

			<Label x:Name="ConvNumberLabel" />
			<Editor x:Name="ConvNumberField" HorizontalTextAlignment="Center" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="ConvNumberInc" VerticalOptions="Center" />
				<Button x:Name="ConvNumberDec" VerticalOptions="Center" />
				<Button x:Name="ConvNumberClear" VerticalOptions="Center" />
			</StackLayout>

			<Label x:Name="ConvHelpLabel" />

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Label />
			<Label x:Name="ConvNumberResultLabel" />
			<Label x:Name="ConvNumberResultField" />

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
