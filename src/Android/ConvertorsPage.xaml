<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.ConvertorsPage">

	<StackLayout >
		<Label x:Name="HeaderLabel" />

		<ScrollView>
			<StackLayout>

				<StackLayout Orientation="Horizontal">
					<Label x:Name="ConvNumberLabel" VerticalOptions="Center" />
					<Editor x:Name="ConvNumberField" VerticalOptions="Center" />
					<Button x:Name="ConvNumberClear" VerticalOptions="Center" />
				</StackLayout>

				<Label x:Name="ConvNumberResultLabel" />
				<Label x:Name="ConvNumberResultField" />

				<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

				<Label />



				<StackLayout Orientation="Horizontal">
					<Label x:Name="ConvCodeLabel" VerticalOptions="Center" />
					<Editor x:Name="ConvCodeField" VerticalOptions="Center" />

					<Button x:Name="ConvCodeInc" VerticalOptions="Center" />
					<Button x:Name="ConvCodeDec" VerticalOptions="Center" />
					<Button x:Name="ConvCodeClear" VerticalOptions="Center" />
				</StackLayout>

				<Label x:Name="ConvCodeResultLabel" />
				<Button x:Name="ConvCodeSymbolField" HorizontalOptions="Center" />
				<Label x:Name="ConvCodeResultField" />

				<Label x:Name="ConvHelpLabel" />

				<Label />

			</StackLayout>
		</ScrollView>

	</StackLayout>
</ContentPage>
