<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.KKTCodesPage">

	<StackLayout >
		<Label x:Name="HeaderLabel" />

		<ScrollView>
			<StackLayout>

				<Label x:Name="SelectionLabel" />
				<Button x:Name="KKTButton" />

				<StackLayout Orientation="Horizontal">
					<Label x:Name="SourceTextLabel" VerticalOptions="Center" />
					<Button x:Name="SelectSavedText" VerticalOptions="Center" />
					<Button x:Name="ClipboardText" VerticalOptions="Center" />
				</StackLayout>
				<Editor x:Name="SourceText" />

				<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
					<Label x:Name="LengthLabel" VerticalOptions="Center" />
					<Button x:Name="RememberText" VerticalOptions="Center" />
					<Button x:Name="CenterText" VerticalOptions="Center" />
					<Button x:Name="ClearText" VerticalOptions="Center" />
				</StackLayout>

				<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

				<Label x:Name="ResultTextLabel" />
				<Label x:Name="ErrorLabel" />
				<Label x:Name="ResultText" />

				<Label x:Name="HelpTextLabel" />
				<Label x:Name="HelpText" />

				<Label />

			</StackLayout>
		</ScrollView>

	</StackLayout>
</ContentPage>
