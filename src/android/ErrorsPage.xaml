<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.ErrorsPage">

	<ScrollView>
		<StackLayout>

			<Label x:Name="SelectionLabel" />
			<Button x:Name="KKTButton" />

			<Label />
			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="ErrorFindButton" VerticalOptions="Center" />
				<Button x:Name="ErrorFindNextButton" VerticalOptions="Center" />
				<Button x:Name="ErrorFindBufferButton" VerticalOptions="Center" />
			</StackLayout>

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Label />
			<Label x:Name="ResultTextLabel" />
			<Label x:Name="ResultText" />

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
