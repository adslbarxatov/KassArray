<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.BarCodesPage">

	<ScrollView>
		<StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label x:Name="BarcodeFieldLabel" VerticalOptions="Center" />
				<Button x:Name="GetFromClipboard" VerticalOptions="Center" />
				<Button x:Name="Clear" VerticalOptions="Center" />
			</StackLayout>
			<Editor x:Name="BarcodeField" />

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Label />
			<Label x:Name="BarcodeDescriptionLabel" />
			<Label x:Name="BarcodeDescription" />

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
