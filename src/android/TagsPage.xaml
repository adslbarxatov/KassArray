<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.TagsPage">

	<ScrollView>
		<StackLayout>

			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="TLVFindButton" VerticalOptions="Center" />
				<Button x:Name="TLVFindNextButton" VerticalOptions="Center" />
				<Button x:Name="TLVFindBufferButton" VerticalOptions="Center" />
			</StackLayout>

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Label />
			<Label x:Name="TLVDescriptionLabel" />
			<Label x:Name="TLVDescription" />

			<Label x:Name="TLVTypeLabel" />
			<Label x:Name="TLVType" />

			<Label x:Name="TLVValuesLabel" />
			<Label x:Name="TLVValues" />

			<Label x:Name="TLVObligationLabel" />
			<Label x:Name="TLVObligation" />

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Button x:Name="TLVObligationHelpLabel" />

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
