<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.TermsDictionaryPage">

	<ScrollView>
		<StackLayout>

			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="DictionaryFindButton" VerticalOptions="Center" />
				<Button x:Name="DictionaryFindNextButton" VerticalOptions="Center" />
				<Button x:Name="DictionaryFindBufferButton" VerticalOptions="Center" />
			</StackLayout>

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Label x:Name="DictionaryDescrLabel" />
			<Label />

			<Label x:Name="DictionaryDescr" />
			<Label />

			<FlexLayout Direction="Row" JustifyContent="Center" Wrap="Wrap" x:Name="GoToButtons" />
			<Label />

			<Label x:Name="DictionaryDescrTipLabel" />
			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
