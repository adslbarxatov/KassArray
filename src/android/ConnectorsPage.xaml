<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.ConnectorsPage">

	<StackLayout>
		<Label x:Name="HeaderLabel" />

		<ScrollView>
			<StackLayout>

				<Label x:Name="CableLabel" />
				<Button x:Name="CableTypeButton" />

				<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

				<Label x:Name="CableDescriptionLabel" />

				<Label x:Name="CableLeftSide" HorizontalOptions="Center" />
				<Label x:Name="CableLeftPins" HorizontalOptions="Center" />
				<Label x:Name="CableRightPins" HorizontalOptions="Center" />
				<Label x:Name="CableRightSide" HorizontalOptions="Center" />

				<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

				<Label x:Name="CableDescription" HorizontalOptions="Center" />

				<Label />

			</StackLayout>
		</ScrollView>

	</StackLayout>
</ContentPage>
    