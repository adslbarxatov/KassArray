<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.UserManualsPage">

	<StackLayout>
		<Label x:Name="HeaderLabel" />

		<ScrollView>
			<StackLayout x:Name="UserManualLayout">

				<Label x:Name="SelectionLabel" />

				<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
					<Button x:Name="KKTButton" VerticalOptions="Center" />
					<Button x:Name="PrintButton" VerticalOptions="Center" />
				</StackLayout>

				<FlexLayout Direction="Row" Wrap="Wrap">
					<StackLayout Orientation="Horizontal">
						<Switch x:Name="OneItemSwitch" VerticalOptions="Center" />
						<Label x:Name="OneItemLabel" VerticalOptions="Center" />
					</StackLayout>

					<StackLayout Orientation="Horizontal">
						<Switch x:Name="PricesSwitch" VerticalOptions="Center" />
						<Label x:Name="PricesLabel" VerticalOptions="Center" />
					</StackLayout>

					<StackLayout Orientation="Horizontal">
						<Switch x:Name="PasswordsSwitch" VerticalOptions="Center" />
						<Label x:Name="PasswordsLabel" VerticalOptions="Center" />
					</StackLayout>
				</FlexLayout>

				<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

				<Label x:Name="HelpLabel" />

			</StackLayout>
		</ScrollView>

	</StackLayout>
</ContentPage>
