<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.HeadersPage">

	<ScrollView>
		<StackLayout>

			<Label x:Name="FunctionsLabel" />

			<StackLayout x:Name="MenuField">
			</StackLayout>

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="200" Color="#505050" Margin="6" />

			<Label />
			<Label x:Name="SettingsLabel" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="Start">
				<Switch x:Name="AllowService" VerticalOptions="Center" />
				<Label x:Name="AllowServiceLabel" VerticalOptions="Center" />
			</StackLayout>

			<Label x:Name="AllowServiceTip" />
			<Button x:Name="AllowServiceButton" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="Start">
				<Switch x:Name="ExtendedMode" VerticalOptions="Center" />
				<Label x:Name="ExtendedModeLabel" VerticalOptions="Center" />
			</StackLayout>

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
   